{
  "extends": [
    "development"
  ],
  "hints": {
    "typescript-config/strict": "off",
    "compat-api/html": [
      "default",
      {
        "ignore": [
          "meta[name=theme-color]"
        ]
      }
    ],
    "detect-css-reflows/layout": "off",
    "compat-api/css": [
      "default",
      {
